<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Student.StudentLoginActivity">

    <LinearLayout
        android:id="@+id/loginLayout_id"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/emailEt_login"
            android:layout_marginTop="50dp"
            android:background="@drawable/forget"
            android:hint="Enter Email"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/passEt_login"
            android:background="@drawable/forget"
            android:hint="Enter Password"
            android:textSize="20dp"
            android:inputType="textPassword"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/signinBtn_id"
            android:text="Sign In"
            android:background="@drawable/button_bg1"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/goSignupBtn_id"
            android:text="Sign Up"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/button_bg2"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

<LinearLayout
    android:id="@+id/signUpLayout_id"
    android:visibility="gone"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <ImageView
    android:id="@+id/profileIv_id"
    android:src="@drawable/ic_baseline_person_pin_24"
    android:layout_marginTop="10dp"
    android:layout_gravity="center"
    android:layout_width="150dp"
    android:layout_height="150dp"/>

    <EditText
        android:id="@+id/nameEt_id"
        android:background="@drawable/forget"
        android:hint="Enter Full Name"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/emailEt_id"
        android:hint="Enter Email"
        android:background="@drawable/forget"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/idEt_id"
        android:layout_marginTop="10dp"
        android:background="@drawable/forget"
        android:hint="Enter Student ID(ex: B986274682)"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/sessionEt_id"
        android:visibility="gone"
        android:background="@drawable/forget"
        android:layout_marginTop="10dp"
        android:hint="Enter Session"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/spinner_id"
        android:background="@drawable/forget"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

    <EditText
        android:id="@+id/passEt_id"
        android:hint="Enter Password"
        android:textSize="20dp"
        android:inputType="textPassword"
        android:background="@drawable/forget"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/signUpBtn"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="18dp"
        android:background="@drawable/button_bg1"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

</LinearLayout>

</LinearLayout>