<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookListActivity">


    <TextView
        android:id="@+id/programmingTv_id"
        android:textStyle="bold"
        android:padding="5dp"
        android:shadowRadius="10"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="Programming(0)"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/networkingTv_id"
        android:textStyle="bold"
        android:padding="5dp"
        android:shadowRadius="10"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="Networking(0)"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/mathTv_id"
        android:textStyle="bold"
        android:padding="5dp"
        android:shadowRadius="10"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="Mathematics(0)"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/physicsTv_id"
        android:textStyle="bold"
        android:padding="5dp"
        android:shadowRadius="10"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="Physics(0)"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/englishTv_id"
        android:textStyle="bold"
        android:padding="5dp"
        android:shadowRadius="10"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="English(0)"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/electronicsTv_id"
        android:textStyle="bold"
        android:padding="5dp"
        android:shadowRadius="10"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="Electronics(0)"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>