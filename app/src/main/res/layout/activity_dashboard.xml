<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Librarian.DashboardActivity">

    <LinearLayout
        android:gravity="center"
        android:weightSum="2.5"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/borrowRequestCV_id"
            android:clickable="true"
            app:cardElevation="5dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp">
            <RelativeLayout
                android:background="#43A047"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Borrow\nRequest"
                    android:textColor="@color/white"
                    android:textSize="22dp" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="100dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/manageCv_id"
            app:cardElevation="5dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp">

            <RelativeLayout
                android:background="#8E24AA"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Books\nManagement"
                    android:textColor="@color/white"
                    android:textSize="22dp" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:weightSum="2.5"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/borrowListCv_id"
            app:cardElevation="5dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp">

            <RelativeLayout
                android:background="#039BE5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Borrow\nList"
                    android:textColor="@color/white"
                    android:textSize="22dp" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <View
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="100dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/transactionCv_id"
            app:cardElevation="5dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp">

            <RelativeLayout
                android:background="#E53935"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Transaction\nManagement"
                    android:textColor="@color/white"
                    android:textSize="22dp" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:weightSum="2.5"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/returnCv_id"
            app:cardElevation="5dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp">

            <RelativeLayout
                android:background="#FB8C00"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Return\nRequest"
                    android:textColor="@color/white"
                    android:textSize="22dp" />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <View
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="100dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/announcementCv_id"
            app:cardElevation="5dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp">

            <RelativeLayout
                android:background="#00897B"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Announcement"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:weightSum="2.5"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/bookListCv_id"
            app:cardElevation="5dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp">

            <RelativeLayout
                android:background="#5E35B1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Book\nList"
                    android:textColor="@color/white"
                    android:textSize="22dp" />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <View
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="100dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/studentManagementCv_id"
            app:cardElevation="5dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp">

            <RelativeLayout
                android:background="#C0CA33"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Student\nManagement"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>



</LinearLayout>