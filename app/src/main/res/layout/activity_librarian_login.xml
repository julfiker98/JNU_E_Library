<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".Librarian.LibrarianLoginActivity">


    <LinearLayout
        android:id="@+id/loginLayout_id"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/emailEt_login"
            android:layout_marginTop="50dp"
            android:background="@drawable/forget"
            android:hint="Enter email"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/passEt_login"
            android:hint="Enter Password"
            android:textSize="20dp"
            android:inputType="textPassword"
            android:layout_marginTop="20dp"
            android:background="@drawable/forget"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/signinBtn_id"
            android:gravity="center"
            android:background="@drawable/button_bg1"
            android:text="Sign In"
            android:textColor="@color/white"
            android:enabled="false"
            android:backgroundTint="#43A047"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="170dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/goSignupBtn_id"
            android:text="Sign Up"
            android:visibility="gone"
            android:backgroundTint="#F4511E"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/signUpLayout_id"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/nameEt_id"
            android:hint="Enter Full Name"
            android:layout_marginTop="50dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/emailEt_id"
            android:hint="Enter email"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/idEt_id"
            android:hint="Enter ID"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/passEt_id"
            android:hint="Enter Password"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/signUpBtn"
            android:text="Sign Up"
            android:backgroundTint="#8E24AA"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>