<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Librarian.UpdateBookActivity">

    <EditText
        android:id="@+id/nameET_View"
        android:background="@drawable/forget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/writerET_View"
        android:background="@drawable/forget"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/nameET_View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/typeET_View"
        android:background="@drawable/forget"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/writerET_View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/isbnET_View"
        android:background="@drawable/forget"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/typeET_View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/linkET_View"
        android:background="@drawable/forget"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/isbnET_View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/updateBtn_id"
        android:background="@drawable/button_bg1"
        android:layout_width="150dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linkET_View"
        android:layout_centerHorizontal="true"
        android:text="Update" />

</RelativeLayout>